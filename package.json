{
  "name": "hevy-sdk",
  "version": "0.0.0",
  "description": "TypeScript SDK for the Hevy API â€“ compatible with Node.js, JavaScript frameworks, and browser environments",
  "main": "dist/cjs/index.js",
  "type": "module",
  "types": "dist/cjs/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build:cjs": "tsc -p tsconfig.commonjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier . --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": [
      "npm run format",
      "npm run lint"
    ]
  },
  "keywords": [
    "hevy",
    "hevy api",
    "hevy sdk",
    "hevy client",
    "fitness",
    "fitness api",
    "workout",
    "workout tracking",
    "api",
    "api client",
    "sdk",
    "typescript",
    "typescript sdk",
    "typescript api",
    "typescript client",
    "node",
    "nodejs",
    "browser",
    "browser sdk",
    "javascript",
    "js sdk",
    "rest api",
    "http client",
    "cross-platform",
    "esm",
    "cjs",
    "client library"
  ],
  "author": "Jack Ecuyer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JackEcuyer/hevy-sdk.git"
  },
  "homepage": "https://github.com/JackEcuyer/hevy-sdk#readme",
  "bugs": {
    "url": "https://github.com/JackEcuyer/hevy-sdk/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "zod": "^3.24.3"
  }
}
